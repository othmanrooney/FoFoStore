
@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<br />
<div class="row">
    <div class="col-6">
        <h2 class="text-primary">Company List </h2>
    </div>
    <div class="col-6 text-right">
        <a class="btn btn-primary" asp-controller="Company" asp-action="Upsert"><i class="fas fa-plus"></i> &nbsp; Create New Company</a>
    </div>
</div>

<br />
<div class="p-4 border rounded">
    <table id="tblData" class="table table-striped border">
        <thead class="thead-dark">
            <tr class="table-info">
                <th>
                    Name
                </th>
                <th>
                    City
                </th>
                <th>
                    StreetAddress
                </th>
                <th>
                    State
                </th>
                
                <th>
                    PhoneNumber
                </th>
                <th>
                    IsAuthorizedCompany
                </th>
                <th></th>
            </tr>
        </thead>
    </table>
</div>
@section Scripts{
    


    <script src="~/js/company.js"></script>
}